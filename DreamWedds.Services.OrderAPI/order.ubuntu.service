[Unit]
Description=Order Service .NET Application
After=network.target

[Service]
WorkingDirectory=/var/www/services/order-service
ExecStart=/usr/bin/dotnet /var/www/services/order-service/OrderService.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=orderservice
User=www-data
Environment=DOTNET_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
