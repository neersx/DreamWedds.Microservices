[Unit]
Description=Cart Service .NET Application
After=network.target

[Service]
WorkingDirectory=/var/www/services/cart-service
ExecStart=/usr/bin/dotnet /var/www/services/cart-service/CartService.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=authservice
User=www-data
Environment=DOTNET_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
