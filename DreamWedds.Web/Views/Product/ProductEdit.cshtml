@model FoodMasterDto

<form asp-action="ProductEdit" enctype="multipart/form-data">
    <div class="container border p-3">
        <h1 class="text-center">Food Master Form</h1>
        <input type="hidden" asp-for="Id" />
        <hr />

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Best Season</label>
                <input asp-for="BestSeason" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Region</label>
                <input asp-for="Region" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Category</label>
                <input asp-for="Category" class="form-control" required />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <h4>Ingredients</h4>
        <div id="ingredientsList">
            <button type="button" class="btn btn-primary" onclick="addIngredient()">Add Ingredient</button>
        </div>

        <h4>Food Items</h4>
        <div id="foodItemsList">
            <button type="button" class="btn btn-primary" onclick="addFoodItem()">Add Food Item</button>
        </div>

        <h4>Images</h4>
        <div id="imagesList">
            <button type="button" class="btn btn-primary" onclick="addImage()">Add Image</button>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-secondary form-control">Cancel</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success form-control">Save</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function addIngredient() {
            let container = document.getElementById("ingredientsList");
            let select = document.createElement("select");
            select.name = "Ingredients[]";
            select.classList.add("form-control", "mt-2");
            select.innerHTML = `<option value="1">Ingredient 1</option><option value="2">Ingredient 2</option>`;
            container.appendChild(select);
        }

        function addFoodItem() {
            let container = document.getElementById("foodItemsList");
            let div = document.createElement("div");
            div.classList.add("d-flex", "gap-2", "mt-2");
            div.innerHTML = `
                <select name="FoodItems[]" class="form-control">
                    <option value="1">Food Item 1</option>
                    <option value="2">Food Item 2</option>
                </select>
                <input type="number" name="FoodItemQuantity[]" class="form-control" placeholder="Quantity" />
                <input type="text" name="FoodItemWeight[]" class="form-control" placeholder="Weight" />
            `;
            container.appendChild(div);
        }

        function addImage() {
            let container = document.getElementById("imagesList");
            let div = document.createElement("div");
            div.classList.add("d-flex", "gap-2", "mt-2");
            div.innerHTML = `
                <input type="text" name="ImageUrl[]" class="form-control" placeholder="Image URL" />
                <input type="text" name="ImageTitle[]" class="form-control" placeholder="Title" />
            `;
            container.appendChild(div);
        }
    </script>
}
