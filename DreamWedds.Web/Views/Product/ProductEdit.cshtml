@model FoodMasterDto

<form asp-action="ProductEdit" enctype="multipart/form-data">
    <div class="container border p-3">
        <h1 class="text-center">Food Master Form</h1>
        <input type="hidden" asp-for="Id" />
        <hr />

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Name</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Best Season</label>
                <input asp-for="BestSeason" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Region</label>
                <input asp-for="Region" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Category</label>
                <input asp-for="Category" class="form-control" required />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" type="number" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Measurement</label>
                <input asp-for="Measurement" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Discount (%)</label>
                <input asp-for="Discount" class="form-control" type="number" step="0.1" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Available Today</label>
                <input asp-for="AvailableToday" type="checkbox" class="form-check-input" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Is Non-Veg</label>
                <input asp-for="IsNonVeg" type="checkbox" class="form-check-input" />
            </div>
        </div>

        <h4>Ingredients</h4>
        <div id="ingredientsList">
            <button type="button" class="btn btn-primary" onclick="addIngredient()">Add Ingredient</button>
        </div>

        <h4>Images</h4>
        <div class="row">
            <div class="col-md-12">
                <input type="file" name="ImageFiles" multiple class="form-control" accept="image/*" />
            </div>
        </div>

        <h4>Food Items</h4>
        <div id="foodItemsList">
            <button type="button" class="btn btn-primary" onclick="addFoodItem()">Add Food Item</button>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-secondary form-control">Cancel</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success form-control">Save</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function addIngredient() {
            let container = document.getElementById("ingredientsList");
            let input = document.createElement("input");
            input.type = "text";
            input.name = "Ingredients[]";
            input.classList.add("form-control", "mt-2");
            input.placeholder = "Ingredient Name";
            container.appendChild(input);
        }
        
        function addFoodItem() {
            let container = document.getElementById("foodItemsList");
            let input = document.createElement("input");
            input.type = "text";
            input.name = "FoodItems[]";
            input.classList.add("form-control", "mt-2");
            input.placeholder = "Food Item Name";
            container.appendChild(input);
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}

